<Application x:Class="MathTex.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MathTex" >
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Attach default Theme -->
                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/RibbonWindow.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/Default.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
